@page
@model RecipeSite.Pages_Recipes.DetailsModel
@using RecipeSite.Models;

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.Procedure)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.Procedure)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Recipe.Published)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Recipe.Published)
        </dd>
    </dl>

    <h4>Ingredienser</h4>
    <ul>
        @{
            foreach(Ingredient item in Model.Recipe.Ingredients){
                <li>
                    @item.Quantity @item.Unit.Name @item.Name
                </li>
            }
        }
    </ul>

    <h4>Kommentare</h4>
    @{
        foreach(Comment comment in Model.Recipe.Comments){
            <p>@comment.CommentText</p>
        }
    }
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
