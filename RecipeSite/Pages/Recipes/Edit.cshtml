@page
@model RecipeSite.Pages_Recipes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Recipe.ID" />
            <div class="form-group">
                <label asp-for="Recipe.Title" class="control-label"></label>
                <input asp-for="Recipe.Title" class="form-control" />
                <span asp-validation-for="Recipe.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Procedure" class="control-label"></label>
                <input asp-for="Recipe.Procedure" class="form-control" />
                <span asp-validation-for="Recipe.Procedure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Author" class="control-label"></label>
                <input asp-for="Recipe.Author" class="form-control" />
                <span asp-validation-for="Recipe.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.Published" class="control-label"></label>
                <input asp-for="Recipe.Published" class="form-control" />
                <span asp-validation-for="Recipe.Published" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
